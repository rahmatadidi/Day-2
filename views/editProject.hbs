    <form style="padding: 5px;" method="POST" action="/project/{{data.id}}">
    <input value="{{data.id}}" name="id" hidden/>
        <h1>Edit Project</h1>
        <div class="add-project">
            <label for="pName">Project Name</label>
            <div class="input-group flex-nowrap" style="margin-bottom: 10px;">
                <input type="text" class="form-control" id="pName" placeholder="Project Name" aria-label="Username" aria-describedby="addon-wrapping" name="projectName" value="{{data.projectName}}">
            </div>
        </div>
        <div class="date">
            <div class="sDate">
                <label for="sDate">Start Date</label>
                <input type="date" class="form-control" id="sDate" aria-label="Username" aria-describedby="addon-wrapping" name="startDate" value="{{data.startDate}}">
            </div>
            <div class="eDate">
                <label for="eDate">End Date</label>
                <input type="date" class="form-control" id="eDate" aria-label="Username" aria-describedby="addon-wrapping" name="endDate" value="{{data.endDate}}">
            </div>
        </div>
        <div class="desc">
            <label for="desc">Description</label>
            <div class="input-group" style="margin-bottom: 2px;">
                <textarea class="form-control" id="desc" aria-label="With textarea" name="content">{{data.content}}</textarea>
            </div>
        </div><br>
        
        <div class="tech" style="margin-top: 2px;">
            <label for="tec">Technologies</label>
            <div class="tech1">
                <div class="form-check" >
                    <input class="form-check-input" name="node" type="checkbox" {{#if data.node}}checked{{/if}} id="flexCheckDefault" style="margin-left: 2px;" value="https://tse2.mm.bing.net/th?id=OIP.xQJlilCdJ7U2ebPvc8DYLwHaIJ&pid=Api&P=0&h=220">
                    <label class="form-check-label" style="margin-right: 50px; margin-left: 10px;">
                    Node Js
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" name="next" type="checkbox" {{#if data.next}}checked{{/if}} value="https://seekicon.com/free-icon-download/next-js_1.svg">
                    <label class="form-check-label">
                    Next Js
                    </label>
                </div>
            </div>
            <div class="tech2">
                <div class="form-check" >
                    <input class="form-check-input" name="react" type="checkbox" {{#if data.react}}checked{{/if}} style="margin-left: 2px;" value="https://www.sportsengineers.com/wp-content/uploads/2015/05/react-logo-570x570.png">
                    <label class="form-check-label" style="margin-right: 50px; margin-left: 10px;">
                    React Js
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" name="typeScript" type="checkbox" {{#if data.typeScript}}checked{{/if}} value="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Typescript_logo_2020.svg/1200px-Typescript_logo_2020.svg.png">
                    <label class="form-check-label">
                    Type Script
                    </label>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="file" class="form-control" id="uImage" name="image">
        </div>
        <div class="submit" id="submit">
            <button type="submit">Submit</button>
        </div>
    </form>
    

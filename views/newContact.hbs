    .active {
    color: orangered !important;
    font-weight: bold   ;
}
.btn {
    background-color: orangered;
    color: white;
    margin-right: 0px;
}

.navbar {
    margin-bottom: 50px;
    text-align: center;
}
.img-fluid {
    margin: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
        <a class="navbar-brand" href="/"><img src="/Assets/img/logo-brand.png" alt="logo"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="addProject">Add Project</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="testimonial">Testimonial</a>
            </li>
            </ul>
            <button class="btn btn-outline-secondary" type="submit"><a href="contact" style="color: white; text-decoration: none;">Contact</a></button>
        </div>
        </div>
    </nav>
    <form>
        <h1>Contact Me</h1>
        <div style="margin-bottom: 10px;">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Name" aria-label="Username" aria-describedby="addon-wrapping">
        </div>
        <div style="margin-bottom: 10px;">
            <label for="email">Email</label>
            <input type="text" class="form-control" id="email" placeholder="Email" aria-label="Username" aria-describedby="addon-wrapping">
        </div>
        <div style="margin-bottom: 10px;">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" id="phone" placeholder="Phone Number" aria-label="Username" aria-describedby="addon-wrapping">
        </div>
        <label for="subject">Subject</label>
        <div class="input-group mb-3">
            <select class="form-select" id="subject">
            <option value="1">Front End Developer</option>
            <option value="2">Back End Developer</option>
            <option value="3">Fullstack Developer</option>
            </select>
        </div>
        <div style="margin-bottom: 20px;">
            <label for="massage">Your Massage</label>
            <div class="input-group" style="margin-bottom: 2px;">
                <textarea class="form-control" id="massage" aria-label="With textarea"></textarea>
            </div>
        </div>
        <div class="submit" id="submit">
            <button type="button" onclick="submitHandler()">Submit</button>
        </div>
    </form>
    <script src="/Assets/js/contact.js"></script>
    <!-- <script src="./Assets/js/nav.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>